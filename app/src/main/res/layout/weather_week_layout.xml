        android:orientation="horizontal">

        <TextView
            android:id="@+id/weather_week_daysText1"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="晴"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weather_week_daysText2"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="晴"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weather_week_daysText3"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="晴"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weather_week_daysText4"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="晴"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weather_week_daysText5"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="晴"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weather_week_daysText6"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
